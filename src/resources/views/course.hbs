<div class='mt-4'>
    <div class='row'>

        {{#each course}}
            <div class='col-sm-6 col-lg-4'>
                <div class='card m-4'>
                    <a href='/courses/{{this.slug}}'>
                        <img class='card-img-top' src='{{this.image}}' alt='Card image' style='width:100%' />
                    </a>
                    <div class='card-body'>
                        <a href='/courses/{{this.slug}}'>
                            <h4 class='card-title'>{{this.name}}</h4>
                        </a>
                        <p class='card-text'>{{this.description}}</p>
                        <a href='#' class='btn btn-primary'>Buy course</a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>