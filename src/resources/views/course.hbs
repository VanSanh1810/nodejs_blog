<div class='mt-4'>
    <div class='row'>

        {{#each course}}
        <div class='col-sm-6 col-lg-4'>
            <div class='card m-4'>
                <img class='card-img-top' src="{{this.image}}" alt='Card image' style='width:100%' />
                <div class='card-body'>
                    <h4 class='card-title'>{{this.name}}</h4>
                    <p class='card-text'>{{this.description}}</p>
                    <a href='#' class='btn btn-primary'>Buy course</a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>